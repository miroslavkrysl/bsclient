<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" type="BorderPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label alignment="CENTER" text="Battleships" textAlignment="CENTER" textOverrun="CLIP" BorderPane.alignment="CENTER">
         <font>
            <Font size="60.0" />
         </font>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </Label>
   </top>
   <center>
      <VBox alignment="CENTER" fillWidth="false" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Connect to server:" textAlignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TextField fx:id="addressTF" alignment="CENTER" prefColumnCount="28" promptText="address" />
            <TextField fx:id="portTF" alignment="CENTER" layoutX="142.0" layoutY="206.0" prefColumnCount="28" promptText="port" />
            <TextField fx:id="nicknameTF" alignment="CENTER" layoutX="142.0" layoutY="104.0" prefColumnCount="28" promptText="nikcname" />
            <Button fx:id="connectBtn" mnemonicParsing="false" onAction="#connect" text="Connect" />
            <Label fx:id="errorLabel" text="Error message" textAlignment="CENTER" textFill="#bc2b03" visible="false">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <ProgressIndicator fx:id="connectProgress" visible="false" />
         </children>
      </VBox>
   </center>
</fx:root>
