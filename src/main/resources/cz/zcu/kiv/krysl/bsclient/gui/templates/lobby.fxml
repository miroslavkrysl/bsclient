<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" type="BorderPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <right>
      <VBox alignment="CENTER" fillWidth="false" prefHeight="424.0" prefWidth="110.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" layoutX="90.0" layoutY="79.0" text="Nickname" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Button fx:id="connectBtn" minWidth="-Infinity" mnemonicParsing="false" onAction="#connect" text="Find opponent and join game" />
            <Label fx:id="errorLabel" text="Error message" textAlignment="CENTER" textFill="#bc2b03" visible="false">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <ProgressIndicator fx:id="connectProgress" visible="false" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </right>
   <bottom>
      <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Connected to:" />
            <Label fx:id="serverAddrLabel" layoutX="30.0" layoutY="30.0" text="127.0.0.1">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Label layoutX="122.0" layoutY="30.0" text="on port:" />
            <Label fx:id="serverPortLabel" layoutX="221.0" layoutY="30.0" text="8191">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Players" textAlignment="CENTER" />
            <TableView prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn editable="false" prefWidth="392.0" text="nicknames" />
              </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <Label alignment="CENTER" text="Battleships" textAlignment="CENTER" textOverrun="CLIP" BorderPane.alignment="CENTER">
         <font>
            <Font size="60.0" />
         </font>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </Label>
   </top>
</fx:root>
